rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow write access to excavators folder for authenticated users
    match /excavators/{userId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // Allow write access to excavators folder (simplified for development)
    match /excavators/{allPaths=**} {
      allow write: if true;
    }
  }
}
